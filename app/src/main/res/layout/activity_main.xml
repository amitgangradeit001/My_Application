<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/targetedView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.643">

        <Button
            android:id="@+id/rightBtn"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginRight="40dp"
            android:background="#F0BDBD"
            android:text="Right"
            android:textColor="#fff"

            />

        <Button
            android:id="@+id/leftBtn"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginRight="40dp"
            android:background="#F0BDBD"
            android:text="Left"
            android:textColor="#fff" />

        <Button
            android:id="@+id/forwardBtn"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="#F0BDBD"
            android:text="Forward"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/targetedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="248dp"
        android:background="#28D8B1B1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/targetedView1"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginRight="40dp"
            android:background="#acacac" />

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:id="@+id/targetedView2"
            android:layout_marginRight="40dp"
            android:background="#acacac" />

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:id="@+id/targetedView3"
            android:background="#acacac" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>